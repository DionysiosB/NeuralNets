import torch
import matplotlib.pyplot as plt
from tqdm import tqdm

nv = 10000
dim = 100
num_steps = 1000

X = torch.randn(dim, nv)
X /= X.norm(p=2, dim=1, keepdim=True)
X.requires_grad_(True)

optimizer = torch.optim.Adam([X], lr=0.01)
losses = [0] * num_steps
dot_diff_cutoff = 0.01

for step_num in tqdm(range(num_steps)):
    optimizer.zero_grad()
    dot_products = X.T @ X
    diff = dot_products - torch.eye(nv, nv)
    loss = (diff.abs() - dot_diff_cutoff).relu().sum() + nv * diff.diag().pow(2).sum()
    loss.backward()
    optimizer.step()
    losses[step_num] = loss.item()

# Loss curve
plt.plot(losses)
plt.grid(1)
plt.show()

# Angle distribution
dot_products = X.T @ X
norms = torch.sqrt(torch.diag(dot_products))
normed_dot_products = dot_products / torch.outer(norms, norms)
angles_degrees = torch.rad2deg(torch.acos(normed_dot_products.detach()))
# Use this to ignore self-orthogonality.
self_orthogonality_mask = ~(torch.eye(nv, nv).bool())
plt.hist(angles_degrees[self_orthogonality_mask].numpy().ravel(), bins=1000, range=(80, 100))
plt.grid(1)
plt.show()
